<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Accomodation"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check in:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/check_in_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Check in"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/check_out_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check out:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/check_out_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Check out"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/location_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text" />

    <TextView
        android:id="@+id/num_rooms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of rooms:"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/num_rooms_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/dropdown_num_rooms" />

    <TextView
        android:id="@+id/room_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room type:"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/room_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/dropdown_room_type" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Accommodation"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
