<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title of the Dialog -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Travel Post"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Destination Input -->
    <TextView
        android:id="@+id/destinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/destinationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter destination"
        android:inputType="text" />

    <!-- Start Date Input -->
    <TextView
        android:id="@+id/startDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/startDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Start Date" />

    <!-- End Date Input -->
    <TextView
        android:id="@+id/endDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/endDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select End Date" />

    <!-- Accommodation Input -->
    <TextView
        android:id="@+id/accommodationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accommodation"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/accommodationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter accommodation details"
        android:inputType="text" />

    <!-- Dining Reservations Input -->
    <TextView
        android:id="@+id/diningLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dining Reservations"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/diningInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter dining reservation details"
        android:inputType="text" />

    <!-- Notes Input -->
    <TextView
        android:id="@+id/notesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/notesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notes about the trip"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitPostButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Post"
        android:layout_marginTop="24dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="8dp" />
</LinearLayout>
